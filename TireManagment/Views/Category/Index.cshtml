@section Scripts{
    <script>
        function showimage(url, category) {
            var title = document.getElementById("staticBackdropLabel");
            title.innerHTML= category;
            var src = document.location.origin + '/Img/' + url;
            // alert(src);
            var img = document.getElementById("img");

            img.src = src;
        }
        function hide() {
            $('#addmodal').modal('hide');
        }
    </script>
}