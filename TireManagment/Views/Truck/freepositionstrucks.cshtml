@using TireManagment.DbModels;
@inject TireManagment.Services.TruckService truckservice;
@using System.Linq;
  
<div class="pagetitle">
    <h1>Trucks  [Missing Tires]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Trucks :  <code>[Missing Tires]</code></h5>
                
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">Truck Number</th>
                                <th scope="col">Free Positions [Missing Tires]</th>
                                 <th scope="col"> Assign Tires </th>
                                 <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                                   @foreach (System.Linq.IGrouping<string,TruckTire> group in ViewBag.freepositionstrucks)
                                     {
                                            <tr>
                                            <td>@group.Key</td>
                                            <td>
                                            @foreach (var x in group)
                                            {
                                                <span>@x.TirePosition &nbsp;&nbsp;</span>
                                            }
                                           </td>
                                           <td><a class="btn btn-success" asp-action="assigntires" asp-controller="Truck" asp-route-trucknumber="@group.Key">Assign Tires</a></td>
                                          </tr>
                                       }
                    </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                </div>
            </div>

        </div>
    </div>
</section>