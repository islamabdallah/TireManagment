</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Administrators</h5>

                    <div class="row">
                            <div class="col-md-6">
                                <p class="alert alert-secondary" role="alert"> <b>Note : </b> List of administrators on the system   , <code> theses users access the admin console only </code></p>
                            </div>
                        </div>


                 

                    <!-- Table with stripped rows -->
                    <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">


                        <div class="dataTable-top">

                            @*<a class="btn btn-success" asp-action="AddTruck" asp-controller="Truck">Add Truck</a>*@
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addmodal">
                                     <span class="badge badge-light"> <i class="bi bi-plus-circle"></i> </span> Add Administrator
                            </button>
                                                   |
                          <a asp-action="AdminExcel" asp-controller="Account"  class="btn btn-success"><span class="badge badge-light">
                              <i class="bi bi-file-earmark-spreadsheet"></i></span>Export to Excel 
                           </a>


                        </div>
                               <br />
                     <br />

                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#ID</></th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Name</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in ViewBag.admins)
                                {
                                    <tr>
                                        <th scope="row">@user.Id</th>
                                        <td>@user.Email</td>
                                        <td>@user.Name</td>

                                    </tr>
                                }


                            </tbody>
                        </table>


                    </div>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>


