@model List<TireManagment.DbModels.TireMovement>;
<div class="pagetitle">
    <h1>All Movements</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
          
            <li class="breadcrumb-item active">Tier Movements</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <p>Add lightweight datatables to your project with using the <a href="https://github.com/fiduswriter/Simple-DataTables" target="_blank">Simple DataTables</a> library. Just add <code>.datatable</code> class name to any table you wish to conver to a datatable</p>

                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Movement Type</th>
                                <th scope="col">Movement Date</th>
                                <th scope="col">Truck Number</th>
                                <th scope="col">TireMan Name</th>
                            </tr>
                        </thead>
                        <tbody>
                          
                            @foreach(var movement in Model)
            {
                        <tr>
                            <td scope="row">@movement.Id</td>
                            <td>@movement.MovementType</td>
                            <td>@movement.SubmitDate</td>
                            <td>@movement.TruckNumber</td>
                            <td>@movement.Tireman.Name</td>
                            <td><a asp-controller="TireMovement" asp-action="GetMovementDetail" asp-route-id="@movement.Id">Movement Details</a></td>
                        </tr>
            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>